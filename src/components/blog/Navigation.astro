---
// src/components/Navigation.astro - Main navigation
import { fetchMenu, buildMenuHierarchy } from '../../lib/wordpress.js';

const menuData = await fetchMenu('primary');
const menuItems = menuData?.items ? buildMenuHierarchy(menuData.items) : [];
---

<nav class="bg-white shadow-sm border-b">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="font-bold text-xl">
        <a href="/" class="text-gray-900 hover:text-blue-600 transition-colors">
          Your Site
        </a>
      </div>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8">
        {menuItems.map(item => (
          <div class="relative group">
            <a 
              href={item.url}
              class="text-gray-700 hover:text-blue-600 transition-colors py-2"
              target={item.target || '_self'}
            >
              {item.title}
            </a>
            
            {item.children && item.children.length > 0 && (
              <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  {item.children.map((child: { url: string | URL | null | undefined; target: any; title: unknown; }) => (
                    <a 
                      href={child.url}
                      class="block px-4 py-2 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors"
                      target={child.target || '_self'}
                    >
                      {child.title}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {menuItems.map(item => (
        <div class="py-2">
          <a 
            href={item.url}
            class="block text-gray-700 hover:text-blue-600 transition-colors"
            target={item.target || '_self'}
          >
            {item.title}
          </a>
          
          {item.children && item.children.length > 0 && (
            <div class="ml-4 mt-2 space-y-2">
              {item.children.map((child: { url: string | URL | null | undefined; target: any; title: unknown; }) => (
                <a 
                  href={child.url}
                  class="block text-gray-600 hover:text-blue-600 transition-colors text-sm"
                  target={child.target || '_self'}
                >
                  {child.title}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>