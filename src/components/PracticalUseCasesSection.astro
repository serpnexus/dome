---
import { Image } from "astro:assets";
import InstagramIcon from "../assets/icons/instagram_logo_icon.svg";
import WhatsappIcon from "../assets/icons/whatapp_logo-icon.svg";
import SlackIcon from "../assets/icons/slack-new-logo.svg";
import FacebookIcon from "../assets/icons/facebook_icon.svg";
import { getLangFromUrl } from "../i18n/utils";
import { useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 md:py-20 px-6">
  <div class="max-w-6xl mx-auto ">
    <h2 class="text-yellow-400 mb-6 text-center">
      {t("usecases.title")}
    </h2>

    <!-- Gaming Section -->
    <div class="mb-8 md:mb-16 bg-[var(--navy-800)] rounded-2xl p-8 md:p-6 border border-navy-700 shadow-md">
      <div class="flex items-center gap-4 md:flex-col md:items-start md:gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 md:h-8 md:w-8 flex-shrink-0 p-2 md:p-1.5 bg-[var(--navy-900)] rounded-xl">
          <rect x="2" y="6" width="20" height="12" rx="2"/>
          <path d="M12 12h.01"/>
          <path d="M7 12h.01"/>
          <path d="M17 12h.01"/>
          <path d="M2 10h20"/>
          <path d="M2 14h20"/>
        </svg>
        <h3 class="text-white mb-2">
          {t('usecases.gaming.title')}
        </h3>
      </div>

      <p class="mb-6 text-[var(--gray-300)] leading-[1.6]">
        {t('usecases.gaming.description')}
      </p>

      <div class="grid grid-cols-1 min-[300px]:grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 mb-12">
        <!-- Fortnite Card -->
        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full transition-transform duration-200 hover:-translate-y-1">
          <h4 class="text-white/90 mb-4">
            {t('usecases.fortnite.title')}
          </h4>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-8">
            {t("usecases.fortnite.description")}
          </p>
          
          <div class="mb-8">
            <h4 class="text-white/90 mb-4">
              {t("usecases.fortnite.howto")}
            </h4>
            <ol class="list-decimal list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t('usecases.fortnite.step1')}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.step2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.step3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.step4")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.step5")}</li>
            </ol>
          </div>
          
          <div class="mb-4">
            <h4 class="text-white/90 mb-4">
              {t('usecases.fortnite.uses')}
            </h4>
            <ul class="list-disc list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.use1")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.use2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.use3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.fortnite.use4")}</li>
            </ul>
          </div>
        </div>

        <!-- PUBG Card -->
        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full transition-transform duration-200 hover:-translate-y-1">
          <h4 class="text-white/90 mb-4">
            {t("usecases.pubg.title")}
          </h4>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-2">
            {t("usecases.pubg.description")}
          </p>
          
          <div class="mb-8">
            <h4 class="text-white/90 mb-4">
              {t("usecases.pubg.howto")}
            </h4>
            <ol class="list-decimal list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.step1")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.step2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.step3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.step4")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.step5")}</li>
            </ol>
          </div>
          
          <div class="mb-4">
            <h4 class="text-white/90 mb-4">
              {t("usecases.pubg.uses")}
            </h4>
            <ul class="list-disc list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.use1")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.use2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.use3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.pubg.use4")}</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Other Games -->
      <div class="mt-12">
        <h3 class="text-white mb-4">
          {t("usecases.othergames.title")}
        </h3>
        <p class="text-[var(--gray-300)] leading-[1.6] mb-8">
          {t("usecases.othergames.description")}
        </p>

        <div class="grid grid-cols-1 min-[250px]:grid-cols-1 lg:grid-cols-3 gap-8 md:gap-6">
          <div class="bg-[var(--navy-700)] rounded-xl p-6">
            <h4 class="text-white/90 mb-4">
              {t("usecases.minecraft.title")}
            </h4>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.minecraft.description")}
            </p>
          </div>

          <div class="bg-[var(--navy-700)] rounded-xl p-6">
            <h4 class="text-white/90 mb-4">
              {t("usecases.callofduty.title")}
            </h4>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.callofduty.description")}
            </p>
          </div>

          <div class="bg-[var(--navy-700)] rounded-xl p-6">
            <h4 class="text-white/90 mb-4">
              {t("usecases.leagueoflegends.title")}
            </h4>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.leagueoflegends.description")}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Messaging Apps Section -->
    <div class="mb-8 md:mb-16 bg-[var(--navy-800)] rounded-2xl p-8 md:p-6 border border-navy-700 shadow-lg">
      <div class="flex items-center gap-4 md:flex-col md:items-start md:gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 md:h-8 md:w-8 flex-shrink-0 p-2 md:p-1.5 bg-[var(--navy-700)] rounded-xl">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
        </svg>
        <h3 class="text-white">
          {t("usecases.messaging.title")}
        </h3>
      </div>

      <p class="mb-2 text-[var(--gray-300)] leading-[1.6]">
        {t("usecases.messaging.description")}
      </p>
      <p class=" text-[var(--gray-300)] leading-[1.6]">
        {t("usecases.messaging.additionalInfo")}
      </p>

      <div class="grid grid-cols-1 min-[300px]:grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 mb-12">
        <!-- WhatsApp -->
        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full">
          <div class="flex items-center gap-4">
            <div class="bg-[var(--navy-900)] p-2 rounded-xl flex items-center justify-center">
              <Image 
                src={WhatsappIcon || "/placeholder.svg"}
                alt="whatsapp icon"
                width={20}
                height={20}
                class="flex-shrink-0"
              />
            </div>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.whatsapp.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6]">
            {t("usecases.whatsapp.description")}
          </p>
          <p class="text-[var(--gray-300)] leading-[1.6] p-4 bg-[var(--navy-600)] rounded-lg text-[0.95rem]">
            {t("usecases.whatsapp.instructions")}
          </p>

          <div class="mb-8">
            <h4 class="text-white/90 mb-4">
              {t("usecases.whatsapp.uses")}
            </h4>
            <ul class="list-disc list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t("usecases.whatsapp.use1")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.whatsapp.use2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.whatsapp.use3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.whatsapp.use4")}</li>
            </ul>
          </div>

          <div class="mt-8 text-center">
            <Image
              src="/images/send-invisible-messages-on-whatsapp.webp"
              alt="WhatsApp message example"
              width={200}
              height={300}
              class="rounded-lg max-w-full h-auto mx-auto shadow-[0_4px_6px_rgba(0,0,0,0.1)] max-[768px]:max-w-[280px] max-[480px]:max-w-[240px]"
            />
          </div>
        </div>

        <!-- Twitter -->
        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full">
          <div class="flex items-center gap-4">
            <div class="bg-[var(--navy-900)] p-2 rounded-xl flex items-center justify-center">
              <Image 
                src="/placeholder.svg"
                alt="Twitter icon"
                width={20}
                height={20}
                class="flex-shrink-0"
              />
            </div>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.twitter.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.twitter.description")}
          </p>

          <div class="mb-8">
            <h4 class="text-white/90 mb-4">
              {t("usecases.twitter.uses")}
            </h4>
            <ul class="list-disc list-inside text-[var(--gray-300)]">
              <li class="mb-1 leading-[1.5]">{t("usecases.twitter.use1")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.twitter.use2")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.twitter.use3")}</li>
              <li class="mb-1 leading-[1.5]">{t("usecases.twitter.use4")}</li>
            </ul>
          </div>

          <div class="mt-8 text-center">
            <Image
              src="/images/send-invisible-message-on-twitter.webp"
              alt="Twitter blank tweet example"
              width={200}
              height={300}
              class="rounded-lg max-w-full h-auto mx-auto shadow-[0_4px_6px_rgba(0,0,0,0.1)] max-[768px]:max-w-[280px] max-[480px]:max-w-[240px]"
            />
          </div>
        </div>
      </div>

      <!-- Other Messaging Apps -->
      <div class="mt-12">
        <h4 class="text-white/90 mb-4">
          {t("usecases.othermessaging.title")}
        </h4>
        <div class="grid grid-cols-1 min-[300px]:grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
          <div class="bg-[var(--navy-700)] rounded-xl p-4">
            <div class="flex items-center gap-3">
              <Image
                src={SlackIcon || "/placeholder.svg"}
                alt="Slack icon"
                width="20"
                height="20"
                class="flex-shrink-0"
              />
              <h4 class="text-white/90 mt-4">
                {t('usecases.slack.title')}
              </h4>
            </div>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.slack.description")}
            </p>
          </div>

          <div class="bg-[var(--navy-700)] rounded-xl p-4">
            <div class="flex items-center gap-3">
              <Image 
                src={InstagramIcon || "/placeholder.svg"}
                alt="Instagram icon"
                width="20"
                height="20"
                class="flex-shrink-0"
              />
              <h4 class="text-white/90 mt-4">
                {t('usecases.instagram.title')}
              </h4>
            </div>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.instagram.description")}
            </p>
          </div>

          <div class="bg-[var(--navy-700)] rounded-xl p-4">
            <div class="flex items-center gap-3">
              <Image 
                src={FacebookIcon || "/placeholder.svg"}
                alt="Facebook icon"
                width="20"
                height="20"
                class="flex-shrink-0"
              />
              <h4 class="text-white/90 mt-4">
                {t('usecases.facebook.title')}
              </h4>
            </div>
            <p class="text-[var(--gray-300)] leading-[1.6]">
              {t("usecases.facebook.description")}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Other Use Cases Section -->
    <div class="mb-8 md:mb-16 bg-[var(--navy-800)] rounded-2xl p-8 md:p-6 border border-navy-700 shadow-lg">
      <div class="flex items-center gap-4  md:flex-col md:items-start md:gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 md:h-8 md:w-8 flex-shrink-0 p-2 md:p-1.5 bg-[var(--navy-500)] rounded-xl">
          <circle cx="12" cy="12" r="3"/>
          <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 1.82-.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
        </svg>
        <h3 class="text-white mb-4">
          {t("usecases.other.title")}
        </h3>
      </div>

      <div class="grid grid-cols-1 min-[300px]:grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
        <div class="bg-[var(--navy-700)] rounded-xl p-4 h-full">
          <div class="flex items-center gap-4 mb-6 md:mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" color="#fff275" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 flex-shrink-0 p-2 bg-[var(--navy-900)] rounded-lg">
              <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <line x1="10" y1="9" x2="8" y2="9"/>
            </svg>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.documents.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.documents.description")}
          </p>
          <ul class="list-disc list-inside text-[var(--gray-300)]">
            <li class="mb-1 leading-[1.5]">{t("usecases.documents.use1")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.documents.use2")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.documents.use3")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.documents.use4")}</li>
          </ul>
        </div>

        <div class="bg-[var(--navy-700)] rounded-xl p-4 h-full">
          <div class="flex items-center gap-4 mb-6 md:mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 flex-shrink-0 p-3 bg-[var(--navy-900)] rounded-lg">
              <polyline points="16 18 22 12 16 6"/>
              <polyline points="8 6 2 12 8 18"/>
            </svg>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.programming.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.programming.description")}
          </p>
          <ul class="list-disc list-inside text-[var(--gray-300)]">
            <li class="mb-1 leading-[1.5]">{t("usecases.programming.use1")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.programming.use2")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.programming.use3")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.programming.use4")}</li>
          </ul>
        </div>

        <div class="bg-[var(--navy-700)] rounded-xl p-4 h-full">
          <div class="flex items-center gap-4 mb-6 md:mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 flex-shrink-0 p-3 bg-[var(--navy-900)] rounded-lg">
              <path d="m12 19 7-7 3 3-7 7-3-3z"/>
              <path d="m18 13-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
              <path d="m2 2 7.586 7.586"/>
              <circle cx="11" cy="11" r="2"/>
            </svg>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.design.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.design.description")}
          </p>
          <ul class="list-disc list-inside text-[var(--gray-300)]">
            <li class="mb-1 leading-[1.5]">{t("usecases.design.use1")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.design.use2")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.design.use3")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.design.use4")}</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Professional Use Cases -->
    <div class="mb-8 md:mb-16 bg-[var(--navy-800)] rounded-2xl p-8 md:p-6 border border-navy-700 shadow-lg">
      <h3 class="text-white mb-4">
        {t("usecases.professional.title")}
      </h3>

      <div class="grid grid-cols-1 min-[300px]:grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8">
        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full">
          <div class="flex items-center gap-4">
            <div class="bg-[var(--navy-900)] rounded-xl flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 flex-shrink-0 p-3 bg-[var(--navy-900)] rounded-lg">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            </div>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.linkedin.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.linkedin.description")}
          </p>
          <ul class="list-disc list-inside text-[var(--gray-300)]">
            <li class="mb-1 leading-[1.5]">{t("usecases.linkedin.use1")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.linkedin.use2")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.linkedin.use3")}</li>
            <li class="mb-1 leading-[1.5]">{t("usecases.linkedin.use4")}</li>
          </ul>
        </div>

        <div class="bg-[var(--navy-700)] rounded-xl p-8 md:p-6 h-full">
          <div class="flex items-center gap-4">
            <div class="bg-[var(--navy-900)] rounded-xl flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#ffe88c] h-10 w-10 flex-shrink-0 p-3 bg-[var(--navy-900)] rounded-lg">
                <rect x="2" y="4" width="20" height="16" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
            </div>
            <h4 class="text-white/90 mb-4 mt-4">
              {t("usecases.email.title")}
            </h4>
          </div>
          <p class="text-[var(--gray-300)] leading-[1.6] mb-6">
            {t("usecases.email.description")}
          </p>
