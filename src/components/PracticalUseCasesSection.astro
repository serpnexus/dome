---
import { Image } from "astro:assets";
import InstagramIcon from "../assets/icons/instagram_logo_icon.svg";
import WhatsappIcon from "../assets/icons/whatapp_logo-icon.svg";
import SlackIcon from "../assets/icons/slack-new-logo.svg";
import FacebookIcon from "../assets/icons/facebook_icon.svg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get the current language and translation function
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="practical-usecases">
<style>
  .practical-usecases {
    padding: 5rem 0;
    background-color: var(--navy-900);
  }

  .practical-usecases .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .usecases-title {
    text-align: center;
    font-size: 2rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 3rem;
  }

  .usecases-description {
    text-align: center;
    font-size: 1.1rem;
    color: var(--gray-300);
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .usecases-section {
    margin-bottom: 4rem;
    background-color: var(--navy-700);
    border-radius: 1rem;
    padding: 2rem;
  }

  .usecases-section:last-child {
    margin-bottom: 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-icon {
    color: var(--white);
    height: 2.5rem;
    width: 2.5rem;
    flex-shrink: 0;
    padding: 0.5rem;
    background-color: var(--navy-600);
    border-radius: 0.75rem;
  }
  .section-icons {
    color: #ffe88c;
    height: 2.5rem;
    width: 2.5rem;
    flex-shrink: 0;
    padding: 0.5rem;
    background-color: var(--navy-500);
    border-radius: 0.75rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--white);
  }

  .section-description {
    margin-bottom: 1.5rem;
    color: var(--gray-300);
    line-height: 1.6;
  }

  .section-additional-info {
    margin-bottom: 1.5rem;
    color: var(--gray-300);
    line-height: 1.6;
  }

  /* Gaming Section Styles */
  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .game-card {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 2rem;
    height: 100%;
    transition: transform 0.2s ease;
  }

  .game-card:hover {
    transform: translateY(-4px);
  }

  .game-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 1.5rem;
  }

  .game-description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .game-howto {
    margin-bottom: 2rem;
  }

  .howto-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .steps-list {
    list-style-type: decimal;
    list-style-position: inside;
    color: var(--gray-300);
  }

  .steps-list li {
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .game-uses {
    margin-bottom: 1rem;
  }

  .uses-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .uses-list {
    list-style-type: disc;
    list-style-position: inside;
    color: var(--gray-300);
  }

  .uses-list li {
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  /* Other Games Section */
  .other-games {
    margin-top: 3rem;
  }

  .other-games-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .other-games-description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .other-games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .other-game {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .other-game-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .other-game-description {
    color: var(--gray-300);
    line-height: 1.6;
  }

  /* Messaging Apps Section */
  .messaging-apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .messaging-app {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 2rem;
    height: 100%;
  }

  .app-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .app-icon {
    color: var(--white);
    background-color: var(--navy-500);
    padding: 0.75rem;
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .app-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--white);

  }

  .app-description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .app-instructions {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: var(--navy-700);
    border-radius: 0.5rem;
    font-size: 0.95rem;
  }

  .app-uses {
    margin-bottom: 2rem;
  }

  .app-image-container {
    margin-top: 2rem;
    text-align: center;
  }

  .app-image {
    border-radius: 0.5rem;
    max-width: 100%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Other Messaging Apps */
  .other-messaging-apps {
    margin-top: 3rem;
  }

  .other-apps-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 2rem;
  }

  .other-apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .other-app {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .other-app-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .other-app-icon {
    color: var(--white);
    flex-shrink: 0;
  }

  .other-app-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
  }

  .other-app-description {
    color: var(--gray-300);
    line-height: 1.6;
  }

  /* Other Use Cases Section */
  .other-usecases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .usecase-card {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 1rem;
    height: 100%;
  }

  .usecase-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .usecase-icon {
    color: var(--white);
    background-color: var(--navy-500);
    padding: 0.75rem;
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .usecase-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
  }

  .usecase-description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .usecase-list {
    list-style-type: disc;
    list-style-position: inside;
    color: var(--gray-300);
  }

  .usecase-list li {
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }

  /* Professional Use Cases */
  .professional-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .professional-card {
    background-color: var(--navy-600);
    border-radius: 0.75rem;
    padding: 1rem;
    height: 100%;
  }

  .professional-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .professional-icon {
    color: var(--white);
    background-color: var(--navy-500);
    padding: 0.75rem;
    border-radius: 0.5rem;
    flex-shrink: 0;

  }

  .professional-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
  }

  .professional-description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .professional-list {
    list-style-type: disc;
    list-style-position: inside;
    color: var(--gray-300);
  }

  .professional-list li {
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    .practical-usecases {
      padding: 4rem 0;
    }

    .practical-usecases .container {
      padding: 0 1rem;
    }

    .usecases-title {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }

    .usecases-section {
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .section-header {
      margin-bottom: 1.5rem;
      align-items: center;
    }

    .section-icon {
      height: 2rem;
      width: 2rem;
      padding: 0.375rem;
      align-items: center;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .games-grid,
    .messaging-apps-grid,
    .other-apps-grid,
    .other-games-grid,
    .other-usecases-grid,
    .professional-grid {
      gap: 1.5rem;
      grid-template-columns: 1fr;
    }

    .game-card,
    .messaging-app,
    .professional-card,
    .usecase-card,
    .other-game,
    .other-app {
      padding: 1.5rem;
    }

    .app-header,
    .professional-header,
    .usecase-header {
      margin-bottom: 1.25rem;
    }

    .game-title,
    .app-title,
    .professional-title,
    .usecase-title {
      font-size: 1.25rem;
    }

    .other-games-title,
    .other-apps-title {
      font-size: 1.25rem;
    }

    .app-image {
      max-width: 280px;
    }
  }

  @media (max-width: 480px) {
    .usecases-section {
      padding: 1rem;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .app-image {
      max-width: 240px;
    }
  }
</style>
