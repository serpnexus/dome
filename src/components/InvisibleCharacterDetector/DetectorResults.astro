---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div id="detectorResults" class={`space-y-4 ${className}`}>
  <!-- Results will be dynamically inserted here -->
</div>

<template id="resultTemplate">
  <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg mb-4">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <span class="font-semibold">Unicode:</span>
        <span class="unicode"></span>
      </div>
      <div>
        <span class="font-semibold">Count:</span>
        <span class="count"></span>
      </div>
      <div>
        <span class="font-semibold">Name:</span>
        <span class="name"></span>
      </div>
      <div>
        <span class="font-semibold">HTML:</span>
        <span class="html"></span>
      </div>
    </div>
    <div class="mt-2">
      <span class="font-semibold">Positions:</span>
      <span class="positions"></span>
    </div>
  </div>
</template>
