---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguageSwitcher from "./LanguagePicker.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get current path to determine active link
const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-container">
      <a href="/" class="logo-link">
        <img
          src="/images/logo.webp"
          alt="invisible text logo"
          class="logo-image"
          width="40"
          height="40"
          loading="eager"
          decoding="async"
        />
        <span class="logo-text">InvisibleText.me</span>
      </a>
    </div>
    
    <div class="nav-container">
      <nav>
        <ul class="nav-links" id="nav-links">
          <li class="nav-item">
            <a href="/" class={`nav-link ${currentPath === "/" ? "active" : ""}`}>
              {t("nav.home")}
            </a>
          </li>
          <li class="nav-item">
            <a href="/unicode" class={`nav-link ${currentPath.includes("unicode") ? "active" : ""}`}>
              {t("nav.unicode")}
            </a>
          </li>
          <li class="nav-item">
            <a href="/blog" class={`nav-link ${currentPath.includes("blog") ? "active" : ""}`}>
              {t("nav.blog")}
            </a>
          </li>
        </ul>
      </nav>
      
      <LanguageSwitcher />
      
      <button class="mobile-menu-button" id="mobile-menu-button" aria-label="Toggle menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>

/* Header Styles */
.site-header {
  background-color: #02194dbc;
  color: white;
  width: 100%;
  padding: 0.5rem 1rem;
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(8px);
}
@supports (backdrop-filter: blur(90px)) {
  .site-header {
    background-color: var(--background);
  }
}
.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: auto;
}

.logo-container {
  display: flex;
  align-items: center;
}

.logo-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: #ffffff;
}

.logo-image {
  width: 40px;
  height: 40px;
  margin-right: 0.75rem;
}

.logo-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: #ffffff;
}

/* Hide logo text on mobile devices */
@media (max-width: 768px) {
  .logo-text {
    display: none;
  }
}

.nav-container {
  display: flex;
  align-items: center;
}

.nav-links {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-item {
  margin-left: 2rem;
}

.nav-link {
  color: #ffffff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: color 0.3s ease;
  padding: 0.5rem 0;
  position: relative;
}

.nav-link:hover {
  color: #f3d34a;
}

.nav-link.active {
  color: #f3d34a;
}

.nav-link.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #f3d34a;
}

.mobile-menu-button {
  display: none;
  background: none;
  border: none;
  color: #ffffff;
  font-size: 1.5rem;
  cursor: pointer;
}

/* Responsive styles */
@media (max-width: 768px) {
  .nav-links {
    display: none;
  }

  .nav-links.open {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 70px;
    left: 0;
    right: 0;
    background-color: #0a1744;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .nav-item {
    margin: 0.5rem 0;
  }

  .mobile-menu-button {
    display: block;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const navLinks = document.getElementById('nav-links');
    
    mobileMenuButton?.addEventListener('click', () => {
      navLinks?.classList.toggle('open');
    });
  });
</script>
