---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

// Get the current language and translation function
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="invisible-text-generator">
  <div class="container mx-auto px-4 py-6 max-w-6xl">
    <h1 class="generator-title text-2xl md:text-3xl font-bold mb-4 text-center">{t("invisibletext.title")}</h1>
    <p class="generator-description text-sm md:text-base mb-6 text-center max-w-3xl mx-auto">
      {t("invisibletext.description")}
    </p>

    <!-- First row (Method 1 & Method 2) -->
    <div class="methods-grid grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <!-- Method 1: Quick Copy -->
      <div class="method-card bg-white dark:bg-gray-800 rounded-lg p-4 shadow-md">
        <h2 class="method-title text-xl font-semibold mb-3">{t("invisibletext.method1.title")}</h2>
        <div class="quick-copy-buttons flex flex-col sm:flex-row flex-wrap gap-2 mb-3">
          <button 
            id="copySmall" 
            class="copy-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors w-full sm:w-auto"
            data-count="3"
            aria-label={t("invisibletext.method1.small") + " - " + t("invisibletext.copy")}
          >
            <span class="icon-container flex items-center">
              <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg class="check-icon hidden" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </span>
            <span>{t("invisibletext.method1.small")}</span>
          </button>
          <button 
            id="copyMedium" 
            class="copy-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors w-full sm:w-auto"
            data-count="10"
            aria-label={t("invisibletext.method1.medium") + " - " + t("invisibletext.copy")}
          >
            <span class="icon-container flex items-center">
              <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg class="check-icon hidden" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </span>
            <span>{t("invisibletext.method1.medium")}</span>
          </button>
          <button 
            id="copyLarge" 
            class="copy-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors w-full sm:w-auto"
            data-count="30"
            aria-label={t("invisibletext.method1.large") + " - " + t("invisibletext.copy")}
          >
            <span class="icon-container flex items-center">
              <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg class="check-icon hidden" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </span>
            <span>{t("invisibletext.method1.large")}</span>
          </button>
        </div>
        <p class="method-description text-sm md:text-base mb-2">
          {t("invisibletext.method1.description")}
        </p>
        <p class="method-note text-xs text-gray-600 dark:text-gray-400">
          {t("invisibletext.method1.fallback")}
        </p>
      </div>

      <!-- Method 2: Character Selection -->
      <div class="method-card bg-white dark:bg-gray-800 rounded-lg p-4 shadow-md">
        <h2 class="method-title text-xl font-semibold mb-3">{t("invisibletext.method2.title")}</h2>
        <p class="method-description text-sm md:text-base mb-3">
          {t("invisibletext.method2.description")}
        </p>
        <div class="character-selector mb-4">
          <label for="characterType" class="sr-only">Select Character Type</label>
          <select 
            id="characterType" 
            class="character-select w-full p-2 bg-gray-100 dark:bg-gray-700 rounded-md mb-2 border border-gray-300 dark:border-gray-600"
            aria-label="Character Type Selection"
          >
            <option value="zwsp">Zero Width Space (U+200B)</option>
            <option value="zwj">Zero Width Joiner (U+200D)</option>
            <option value="zwnj">Zero Width Non-Joiner (U+200C)</option>
            <option value="hangul" selected>Hangul Filler (U+3164)</option>
            <option value="wj">Word Joiner (U+2060)</option>
          </select>
          <div class="character-actions flex gap-2">
            <button 
              id="copySelected" 
              class="action-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors flex-1"
              aria-label={t("invisibletext.copy") + " selected character"}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <span>{t("invisibletext.copy")}</span>
            </button>
            <button 
              id="previewSelected" 
              class="action-button flex items-center justify-center gap-2 py-2 px-4 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white rounded-md transition-colors flex-1"
              aria-label={t("invisibletext.preview") + " selected character"}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <span>{t("invisibletext.preview")}</span>
            </button>
          </div>
        </div>
        <div class="character-info bg-gray-50 dark:bg-gray-900 p-3 rounded-md">
          <h3 class="info-title text-lg font-medium mb-1" id="selectedCharName">Hangul Filler</h3>
          <p class="info-description text-sm" id="selectedCharDesc">
            An invisible character mainly used in the Korean script. In gaming and social media, it can be employed to create invisible names or disguise messages.
          </p>
        </div>
      </div>
    </div>

    <!-- Second row (Method 3 & Method 4) -->
    <div class="methods-grid grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <!-- Method 3: Custom Generator -->
      <div class="method-card bg-white dark:bg-gray-800 rounded-lg p-4 shadow-md">
        <h2 class="method-title text-xl font-semibold mb-3">{t("invisibletext.method3.title")}</h2>
        <p class="method-description text-sm md:text-base mb-3">
          {t("invisibletext.method3.description")}
        </p>
        <div class="custom-generator">
          <div class="generator-controls flex flex-col sm:flex-row gap-3 mb-3">
            <div class="flex-1">
              <label for="customCharType" class="sr-only">Select Character Type for Custom Generator</label>
              <select 
                id="customCharType" 
                class="character-select w-full p-2 bg-gray-100 dark:bg-gray-700 rounded-md border border-gray-300 dark:border-gray-600"
                aria-label="Character Type for Custom Generator"
              >
                <option value="zwsp">Zero Width Space (U+200B)</option>
                <option value="zwj">Zero Width Joiner (U+200D)</option>
                <option value="zwnj">Zero Width Non-Joiner (U+200C)</option>
                <option value="hangul" selected>Hangul Filler (U+3164)</option>
                <option value="wj">Word Joiner (U+2060)</option>
              </select>
            </div>
            <div class="count-control flex items-center gap-2">
              <label for="customCount" class="count-label whitespace-nowrap">{t("invisibletext.count")}</label>
              <input 
                type="number" 
                id="customCount" 
                min="1" 
                max="1000"
                value="5" 
                class="count-input p-2 bg-gray-100 dark:bg-gray-700 rounded-md border border-gray-300 dark:border-gray-600 w-full"
                aria-label="Number of characters to generate"
              />
            </div>
          </div>
          <div class="generator-actions flex flex-col sm:flex-row gap-2">
            <button 
              id="generateCustom" 
              class="primary-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors flex-1"
              aria-label={t("invisibletext.generate") + " custom invisible text"}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M12 2v4"/>
                <path d="M12 18v4"/>
                <path d="m4.93 4.93 2.83 2.83"/>
                <path d="m16.24 16.24 2.83 2.83"/>
                <path d="M2 12h4"/>
                <path d="M18 12h4"/>
                <path d="m4.93 19.07 2.83-2.83"/>
                <path d="m16.24 7.76 2.83-2.83"/>
              </svg>
              <span>{t("invisibletext.generate")}</span>
            </button>
            <button 
              id="copyCustom" 
              class="secondary-button flex items-center justify-center gap-2 py-2 px-4 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white rounded-md transition-colors flex-1"
              aria-label={t("invisibletext.copy") + " generated invisible text"}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <span>{t("invisibletext.copy")}</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Method 4: Advanced Options -->
      <div class="method-card bg-white dark:bg-gray-800 rounded-lg p-4 shadow-md">
        <h2 class="method-title text-xl font-semibold mb-3">{t("invisibletext.method4.title")}</h2>
        <p class="method-description text-sm md:text-base mb-3">
          {t("invisibletext.method4.description")}
        </p>
        <div class="advanced-options">
          <div class="option-group mb-3">
            <label class="option-label flex items-center gap-2 mb-1 cursor-pointer">
              <input type="checkbox" id="mixCharacters" class="option-checkbox w-4 h-4" aria-label="Mix different invisible characters"/>
              <span>{t("invisibletext.method4.mix")}</span>
            </label>
            <div class="option-info text-xs text-gray-600 dark:text-gray-400 pl-6">{t("invisibletext.method4.mixInfo")}</div>
          </div>
          <div class="option-group mb-3">
            <label class="option-label flex items-center gap-2 mb-1 cursor-pointer">
              <input type="checkbox" id="addPattern" class="option-checkbox w-4 h-4" aria-label="Add pattern to text"/>
              <span>{t("invisibletext.method4.pattern")}</span>
            </label>
            <div class="option-info text-xs text-gray-600 dark:text-gray-400 pl-6">{t("invisibletext.method4.patternInfo")}</div>
          </div>
          <div class="count-control large flex items-center gap-2 mb-3">
            <label for="advancedCount" class="count-label whitespace-nowrap">{t("invisibletext.count")}</label>
            <input 
              type="number" 
              id="advancedCount" 
              min="1" 
              max="5000"
              value="20" 
              class="count-input p-2 bg-gray-100 dark:bg-gray-700 rounded-md border border-gray-300 dark:border-gray-600 w-full"
              aria-label="Number of characters for advanced generation"
            />
          </div>
          <button 
            id="generateAdvanced" 
            class="primary-button full-width flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors w-full"
            aria-label="Generate advanced invisible text with selected options"
          >
            {t("invisibletext.method4.generateAdvanced")}
          </button>
        </div>
      </div>
    </div>

    <!-- Test Area -->
    <div class="test-area-container bg-white dark:bg-gray-800 rounded-lg p-4 shadow-md">
      <h2 class="test-area-title text-xl font-semibold mb-3">{t("invisibletext.testarea.title")}</h2>
      <p class="test-area-description text-sm md:text-base mb-3">
        {t("invisibletext.testarea.description")}
      </p>
      <div class="test-area-wrapper relative mb-2">
        <label for="testArea" class="sr-only">Test Area for Invisible Text</label>
        <textarea 
          id="testArea" 
          class="test-area w-full h-32 p-3 bg-gray-50 dark:bg-gray-900 rounded-md border border-gray-300 dark:border-gray-600 resize-y"
          placeholder={t("invisibletext.testarea.placeholder")}
          aria-label="Test area for invisible text"
        ></textarea>
        <div class="test-area-overlay absolute inset-0 flex items-center justify-center bg-gray-50 dark:bg-gray-900 bg-opacity-90 dark:bg-opacity-90 rounded-md pointer-events-none" id="testAreaOverlay">
          <div class="overlay-message text-gray-500 dark:text-gray-400">
            {t("invisibletext.testarea.empty")}
          </div>
        </div>
      </div>
      <div class="test-area-footer flex flex-col sm:flex-row justify-between gap-2">
        <div class="character-count text-sm text-gray-600 dark:text-gray-400 flex items-center">
          {t("invisibletext.testarea.characters")}: <span id="charCount" class="ml-1 font-medium">0</span>
        </div>
        <div class="test-area-actions flex gap-2">
          <button 
            id="copyTest" 
            class="action-button flex items-center justify-center gap-2 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition-colors"
            aria-label={t("invisibletext.copy") + " test area content"}
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
              <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
            </svg>
            <span>{t("invisibletext.copy")}</span>
          </button>
          <button 
            id="clearTest" 
            class="action-button flex items-center justify-center gap-2 py-2 px-4 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white rounded-md transition-colors"
            aria-label={t("invisibletext.clear") + " test area"}
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M3 6h18"/>
              <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
              <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
            </svg>
            <span>{t("invisibletext.clear")}</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
  // Character definitions
  const characters = {
    zwsp: { char: '\u200B', name: 'Zero Width Space', description: 'An invisible character for formatting digital text. It allows word breaks or line breaks without adding a visible space.' },
    zwj: { char: '\u200D', name: 'Zero Width Joiner', description: 'An empty character for joining two characters without any visible separation. It is commonly used in creating complex scripts and emoji sequences.' },
    zwnj: { char: '\u200C', name: 'Zero Width Non-Joiner', description: 'Prevents characters from joining together. This is particularly useful in scripts where certain character combinations should remain separate.' },
    hangul: { char: '\u3164', name: 'Hangul Filler', description: 'An invisible character mainly used in the Korean script. In gaming and social media, it can be employed to create invisible names or disguise messages.' },
    wj: { char: '\u2060', name: 'Word Joiner', description: 'Similar to the Zero Width No-Break Space, it prevents line breaks between the characters it separates.' }
  };

  // DOM Elements
  const testArea = document.getElementById('testArea') as HTMLTextAreaElement;
  const testAreaOverlay = document.getElementById('testAreaOverlay');
  const charCount = document.getElementById('charCount');
  
  // Method 1: Quick Copy Buttons
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLButtonElement;
      const count = parseInt(target.dataset.count || '1');
      const invisibleText = characters.hangul.char.repeat(count);
      
      // Copy to clipboard
      navigator.clipboard.writeText(invisibleText);
      
      // Add to test area
      if (testArea) {
        testArea.value += invisibleText;
        updateTestArea();
      }
      
      // Show copied state
      showCopiedState(target);
    });
  });

  // Method 2: Character Selection
  const characterType = document.getElementById('characterType') as HTMLSelectElement;
  const selectedCharName = document.getElementById('selectedCharName');
  const selectedCharDesc = document.getElementById('selectedCharDesc');
  const copySelected = document.getElementById('copySelected');
  const previewSelected = document.getElementById('previewSelected');

  // Update character info when selection changes
  characterType?.addEventListener('change', () => {
    const selected = characterType.value as keyof typeof characters;
    if (selectedCharName) selectedCharName.textContent = characters[selected].name;
    if (selectedCharDesc) selectedCharDesc.textContent = characters[selected].description;
  });

  // Copy selected character
  copySelected?.addEventListener('click', () => {
    const selected = characterType.value as keyof typeof characters;
    const invisibleChar = characters[selected].char;
    
    // Copy to clipboard
    navigator.clipboard.writeText(invisibleChar);
    
    // Add to test area
    if (testArea) {
      testArea.value += invisibleChar;
      updateTestArea();
    }
    
    // Show copied state
    showCopiedState(copySelected);
  });

  // Preview selected character in test area
  previewSelected?.addEventListener('click', () => {
    const selected = characterType.value as keyof typeof characters;
    const invisibleChar = characters[selected].char;
    
    // Add to test area
    if (testArea) {
      testArea.value += invisibleChar;
      updateTestArea();
    }
  });

  // Method 3: Custom Generator
  const customCharType = document.getElementById('customCharType') as HTMLSelectElement;
  const customCount = document.getElementById('customCount') as HTMLInputElement;
  const generateCustom = document.getElementById('generateCustom');
  const copyCustom = document.getElementById('copyCustom');
  
  let lastGeneratedText = '';

  // Generate custom invisible text
  generateCustom?.addEventListener('click', () => {
    const selected = customCharType.value as keyof typeof characters;
    const count = parseInt(customCount.value || '1');
    lastGeneratedText = characters[selected].char.repeat(count);
    
    // Add to test area
    if (testArea) {
      testArea.value += lastGeneratedText;
      updateTestArea();
    }
    
    // Show success message
    showToast('Generated and added to test area!');
  });

  // Copy last generated text
  copyCustom?.addEventListener('click', () => {
    if (lastGeneratedText) {
      navigator.clipboard.writeText(lastGeneratedText);
      showCopiedState(copyCustom);
    } else {
      showToast('Generate text first!');
    }
  });

  // Method 4: Advanced Options
  const mixCharacters = document.getElementById('mixCharacters') as HTMLInputElement;
  const addPattern = document.getElementById('addPattern') as HTMLInputElement;
  const advancedCount = document.getElementById('advancedCount') as HTMLInputElement;
  const generateAdvanced = document.getElementById('generateAdvanced');

  // Generate advanced invisible text
  generateAdvanced?.addEventListener('click', () => {
    const count = parseInt(advancedCount.value || '20');
    let result = '';
    
    if (mixCharacters.checked) {
      // Mix different invisible characters
      const charTypes = Object.keys(characters);
      for (let i = 0; i < count; i++) {
        const randomType = charTypes[Math.floor(Math.random() * charTypes.length)] as keyof typeof characters;
        result += characters[randomType].char;
      }
    } else if (addPattern.checked) {
      // Create a pattern of invisible characters
      const charTypes = Object.keys(characters);
      const patternLength = Math.min(charTypes.length, 3);
      const pattern = charTypes.slice(0, patternLength);
      
      for (let i = 0; i < count; i++) {
        const typeIndex = i % patternLength;
        const type = pattern[typeIndex] as keyof typeof characters;
        result += characters[type].char;
      }
    } else {
      // Default to Hangul Filler
      result = characters.hangul.char.repeat(count);
    }
    
    lastGeneratedText = result;
    
    // Add to test area
    if (testArea) {
      testArea.value += result;
      updateTestArea();
    }
    
    // Show success message
    showToast('Advanced text generated and added to test area!');
  });

  // Test Area Functionality
  const copyTest = document.getElementById('copyTest');
  const clearTest = document.getElementById('clearTest');

  // Update test area and character count
  function updateTestArea() {
    if (testArea && charCount) {
      charCount.textContent = testArea.value.length.toString();
      
      // Show/hide overlay based on content
      if (testAreaOverlay) {
        if (testArea.value.length > 0) {
          testAreaOverlay.classList.add('hidden');
        } else {
          testAreaOverlay.classList.remove('hidden');
        }
      }
    }
  }

  // Initialize test area
  updateTestArea();

  // Listen for input in test area
  testArea?.addEventListener('input', updateTestArea);

  // Copy test area content
  copyTest?.addEventListener('click', () => {
    if (testArea && testArea.value) {
      navigator.clipboard.writeText(testArea.value);
      showCopiedState(copyTest);
    } else {
      showToast('Nothing to copy!');
    }
  });

  // Clear test area
  clearTest?.addEventListener('click', () => {
    if (testArea) {
      testArea.value = '';
      updateTestArea();
      showToast('Test area cleared!');
    }
  });

  // Helper Functions
  function showCopiedState(button: HTMLElement) {
    // Find the copy and check icons within this button
    const copyIcon = button.querySelector('.copy-icon');
    const checkIcon = button.querySelector('.check-icon');
    
    // If this is a button with icons
    if (copyIcon && checkIcon) {
      copyIcon.classList.add('hidden');
      checkIcon.classList.remove('hidden');
      
      setTimeout(() => {
        copyIcon.classList.remove('hidden');
        checkIcon.classList.add('hidden');
      }, 2000);
    }
    
    // Show toast message
    showToast('Copied to clipboard!');
  }

  function showToast(message: string) {
    const toast = document.createElement('div');
    toast.className = 'toast';
    toast.textContent = message;
    document.body.appendChild(toast);
    
    // Trigger animation
    setTimeout(() => {
      toast.classList.add('show');
    }, 10);
    
    // Remove after animation
    setTimeout(() => {
      toast.classList.remove('show');
      setTimeout(() => {
        document.body.removeChild(toast);
      }, 300);
    }, 2000);
  }
</script>
