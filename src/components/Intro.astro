---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get the current language and translation function
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="py-12 mt-12 px-4" id="what-is-invisible-text">
    <div class="max-w-3xl mx-auto text-center">
        <h2 class=" text-yellow-400 mb-4 leading-tight">
            {t("about.introduction.title").split("InvisibleText.me")[0]}{" "}
            <a href={lang === 'en' ?  '/' : `/${lang}`}  class="underline text-yellow-400 hover:text-white transition-colors duration-300">
                InvisibleText.me
            </a>
            {t("about.introduction.title").includes("InvisibleText.me")
            ? t("about.introduction.title").split("InvisibleText.me")[1]
              : ""}
        </h2>
        <p class="text-lg text-white leading-relaxed">{t("about.introduction.description")}</p>
    </div>
</section>
