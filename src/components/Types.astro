      <div class="bg-white bg-opacity-5 border border-white border-opacity-10 rounded-lg p-6">
        <h3 class="mb-4">{t("about.types.zeroWidthSpace.title")}</h3>
        <div class="flex justify-center mb-6">
          <div class="bg-navy-700 w-16 h-16 flex items-center justify-center rounded">
            <span class="text-white text-xl">&#8203;</span>
          </div>
        </div>
        <p class="text-white">{t("about.types.zeroWidthSpace.description")}</p>
      </div>

      <div class="bg-white bg-opacity-5 border border-white border-opacity-10 rounded-lg p-6">
        <h3 class="mb-4">{t("about.types.hangulFiller.title")}</h3>
        <div class="flex justify-center mb-6">
          <div class="bg-navy-700 w-16 h-16 flex items-center justify-center rounded">
