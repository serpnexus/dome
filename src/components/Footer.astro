---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';



const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="mt-auto py-16 pb-2 border-t border-navy-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 lg:gap-8 xl:gap-10">
      <!-- Brand/Logo -->
      <div class="flex flex-col items-start mb-8 lg:mb-0">
        <a href="/" class="mb-4">
          <Image 
            src="/images/logo.webp"
            alt="logo"
            height="100"
            width="100"
            class="w-20 h-20 mb-3 rounded-xl shadow-lg"
          />
          <h3 class="text-2xl font-bold text-yellow-200 mb-2">InvisibleText.me</h3>
        </a>
        <p class="text-gray-300 mb-4 text-base leading-relaxed">
          {t('footer.description')}
        </p>
        <div class="flex gap-4 mt-2">
          <a href="https://www.invisibletext.me/#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            <span class="sr-only">Twitter</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="https://www.invisibletext.me/#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            <span class="sr-only">GitHub</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Tools -->
      <div class="flex flex-col mb-8 lg:mb-0">
        <h3 class="text-xl font-semibold text-yellow-200 mb-4">Tools</h3>
        <div class="flex flex-col ">
          <a href="/tools/text-counter" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Text Counter</a>
          <a href="/tools/case-converter" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Case Converter</a>
          <a href="/tools/simlish-translator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Similish Translator</a>
          <a href="/tools/wingdings-translator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Wingdings Translator</a>
          <a href="/tools/fancy-text-generator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Fancy Text Generator</a>
          <a href="/tools/small-text-generator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Small Text Generator</a>
          <a href="/tools/mirror-text-generator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Mirror Text Generator</a>
          <a href="/tools/old-english-translator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Old English Translator</a>
          <a href="/tools/high-valyrian-translator" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">High Valyrian Translator</a>
          <a href="/tools/bold-italic-converter" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Bold Italic Text Converter</a>
          <a href="/tools/upside-down-text" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Upside Down Text Generator</a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col mb-8 lg:mb-0">
        <h3 class="text-xl font-semibold text-yellow-200 mb-4">{t('footer.quickLinks')}</h3>
        <div class="flex flex-col ">
          <a href="/" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">{t('nav.home')}</a>
          <a href="/blog" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">{t('nav.blog')}</a>
          <a href="/unicode" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">{t('nav.unicode')}</a>
          <a href="/contact" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Contact</a>
          <a href="/about" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">About Us</a>
          <a href="/disclaimer" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Disclaimer</a>
          <a href="/write-for-us" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Write for Us</a>
        </div>
      </div>

      
      <div class="flex flex-col mb-8 lg:mb-0">
        <h3 class="text-xl font-semibold text-yellow-200 mb-4">{t('footer.contact')}</h3>
        <p class="text-gray-300 mb-2 text-base leading-relaxed">{t('footer.contactText')}</p>
        <a href="mailto:serpnexus.biz@gmail.com" class="text-yellow-400 hover:underline mb-4 overflow-hidden overflow-wrap">serpnexus.biz@gmail.com</a>
        <div class="flex flex-col mt-2">
          <a href="/terms" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Terms of Service</a>
          <a href="/privacy" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 py-1 px-2 rounded-lg">Privacy Policy</a>
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-navy-700 text-center text-gray-400 text-sm">
      <p>&copy; {currentYear} InvisibleText.me. {t('footer.rights')}</p>
    </div>
  </div>
</footer>

