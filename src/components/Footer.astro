---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';



const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="mt-auto py-16 pb-2 border-t border-navy-700">
  <div class="max-w-1200 mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <a href="/">
          <Image 
            src="/images/logo.webp"
            alt="logo"
            height="100"
            width="100"
            class="w-24 h-24 mb-3"
          />
          <h3 class="text-xl mb-4 text-yellow-200">InvisibleText.me</h3>
        </a>
        <p class="text-gray-300">
          {t('footer.description')}
        </p>
        <div class="flex gap-4 mt-4">
          <a href="https://www.invisibletext.me/#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            <span class="sr-only">Twitter</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="https://www.invisibletext.me/#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            <span class="sr-only">GitHub</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <div>
        <h3 class="text-xl mb-4 text-yellow-200">{t('footer.quickLinks')}</h3>
        <div class="flex flex-col gap-2">
          <a href="/" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            {t('nav.home')}
          </a>
          <a href="/tools" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            Tools
          </a>
          <a href="/unicode" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            {t('nav.unicode')}
          </a>
          <a href="/blog" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            {t('nav.blog')}
          </a>
          <a href="/about" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            About Us
          </a>
          <a href="/contact" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
            Contact
          </a>
        </div>
      </div>
      
      <div>
        <h3 class="text-xl mb-4 text-yellow-200">{t('footer.contact')}</h3>
        <p class="text-gray-300">{t('footer.contactText')}</p>
        <a href="mailto:serpnexus.biz@gmail.com" class="text-yellow-400 hover:underline">
          serpnexus.biz@gmail.com
        </a>
        <div class="mt-4 flex gap-4">
          <a href="/terms" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">Terms of Service</a>
          <a href="/privacy" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">Privacy Policy</a>
        </div>
        <div class="mt-4 flex gap-4">
          <a href="/disclaimer" class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">Disclaimer</a>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-navy-700 text-center text-gray-400">
      <p>&copy; {currentYear} InvisibleText.me. {t('footer.rights')}</p>
    </div>
  </div>
</footer>

