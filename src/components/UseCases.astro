---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="use-cases">
  <div class="container">
    <div class="use-cases-title">
      <h2 class="text-3xl font-bold text-white">
        {t('useCases.title')}
      </h2>
      <p class="text-gray-300">
        {t('useCases.subtitle')}
      </p>
    </div>
    
    <div class="use-cases-grid">
      <div class="card">
        <h3 class="text-xl font-bold text-white mb-4">
          {t('useCases.case1.title')}
        </h3>
        <p class="text-gray-300 mb-4">
          {t('useCases.case1.description')}
        </p>
        <div class="use-case-example">
          <div class="flex items-start gap-3">
            <div style="width: 32px; height: 32px; border-radius: 50%; background-color: #10B981;"></div>
            <div style="background-color: #ECFDF5; color: #064E3B; padding: 12px; border-radius: 8px;">
              {t('useCases.case1.example')}
            </div>
          </div>
        </div>
        <a href="/en/unicode" class="learn-more">
          {t('useCases.learnMore')}
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <div class="card">
        <h3 class="text-xl font-bold text-white mb-4">
          {t('useCases.case2.title')}
        </h3>
        <p class="text-gray-300 mb-4">
          {t('useCases.case2.description')}
        </p>
        <div class="use-case-example">
          <div class="flex flex-col gap-3">
            <div class="flex items-center gap-2 text-gray-300">
              <div style="width: 24px; height: 24px; border-radius: 50%; background-color: #3B82F6;"></div>
              <span>@username</span>
            </div>
            <div style="border: 1px solid var(--navy-600); border-radius: 8px; padding: 12px; color: var(--gray-300);">
              {t('useCases.case2.example')}
            </div>
          </div>
        </div>
        <a href="unicode" class="learn-more">
          {t('useCases.learnMore')}
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

