---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import WhatsAppLogo from "../assets/use/invisible-messages-on-whatsapp.webp";
import FacebookLogo from "../assets/use/fb-use.webp";
import InstagramLogo from "../assets/use/instagram.jpeg";
import { Image } from "astro:assets";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
