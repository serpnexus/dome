---
import Layout from '../layouts/Layout.astro';
import Intro from '../components/Intro.astro';
import WhtIsInvisibleTxt from '../components/WhtIsInvisibleTxt.astro';
import WhySection from '../components/WhyUse.astro';
import PracticalUseCasesSection from '../components/PracticalUseCasesSection.astro';
import InvisibleTextGenerator from '../components/InvisibleTextGenerator.astro';
import TypesOfInvisibleText from '../components/Types.astro';
import FAQSection from '../components/FAQ.astro';
import UnicodeTable from '../components/UnicodeTable.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import BlogSection from '../components/BlogSection.astro';
import LazyAdSlot from '../components/ads/LazyAdsSlot';
import { CA_PUB_ID, DIS_AD_SLOT_WIDEBANNER, DISPLAY_AD_FORMAT, MULTIPLEX_AD_SLOT } from '../const';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
export const prerender = true;
---

<Layout title={t('meta.title')} description={t('meta.description')}>
  <InvisibleTextGenerator />
  <ins
    class="adsbygoogle"
    style={{ display: 'block' }}
    data-ad-client="ca-pub-1370487049277752"
    data-ad-slot="3155482655"
    data-ad-format="auto"
    data-full-width-responsive="true"
  ></ins>
  <Intro />
  <WhtIsInvisibleTxt />
  <TypesOfInvisibleText />
  <UnicodeTable />
  <WhySection />
  <PracticalUseCasesSection />
  <BlogSection />
  <LazyAdSlot 
    client:visible
    adClient={CA_PUB_ID}
    adSlot={MULTIPLEX_AD_SLOT}
    format={DISPLAY_AD_FORMAT}
    responsive={true}
    style={{ display: 'block', textAlign: 'center' }}
  />
  <FAQSection />
</Layout>

