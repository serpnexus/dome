<style>
  .about-container {
    max-width: 920px;
    margin: 0 auto;
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    margin: 0 auto;
    padding: 2rem 1rem;
    color: var(--gray-100, #f3f4f6);
  }

  .page-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--white, #ffffff);
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  .about-updated {
    color: var(--gray-400, #9ca3af);
    font-style: italic;
    text-align: center;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--navy-700, #374151);
  }
  
  .about-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--yellow-400);
    margin-bottom: 0.5rem;
  }
  
  .section-content {
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 1rem;
  }
  
  .feature-card {
    background-color: var(--navy-700);
    border-radius: 0.5rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .feature-icon {
    width: 3rem;
    height: 3rem;
    background-color: var(--navy-600);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--yellow-400);
  }
  
  .feature-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--white);
  }
  
  .feature-description {
    color: var(--gray-300);
    line-height: 1.5;
  }
  
  .inline-link {
    color: var(--yellow-400);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .inline-link:hover {
    text-decoration: underline;
  }
  
  @media (min-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>