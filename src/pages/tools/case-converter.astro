---
import Layout from '../../layouts/StaticPageLayout.astro';
import TextConverter from '../../components/TextConverter.astro';
import { getLangFromUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Case Converter - Convert Text Between Different Cases" description="Convert text between uppercase, lowercase, title case, and alternating case with our free online case converter. Perfect for formatting text!">
  <div class="min-h-screen bg-gradient-to-b from-navy-900 to-navy-800 py-12 px-4">
    <!-- Hero Section -->
    <section class="pt-20 pb-16 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-yellow-300 mb-4">
          Case Converter
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Convert text between different cases: UPPERCASE, lowercase, Title Case, and aLtErNaTiNg case. Perfect for formatting text for various purposes!
        </p>
      </div>
    </section>

    <!-- Tool Section -->
    <section class="px-4 pb-20">
      <div class="max-w-4xl mx-auto">
        <!-- Replaced custom case converter with reusable TextConverter component -->
        <TextConverter mode="case"/>

        <!-- Examples Section -->
        <div class="mt-12 bg-navy-800/30 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-white mb-6 text-center">Case Examples</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-green-400">UPPERCASE</h3>
              <div class="bg-navy-700/30 p-4 rounded-lg">
                <p class="text-2xl">HELLO WORLD</p>
                <p class="text-sm text-gray-400 mt-2">Perfect for headings and emphasis</p>
              </div>
            </div>
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-blue-400">lowercase</h3>
              <div class="bg-navy-700/30 p-4 rounded-lg">
                <p class="text-2xl">hello world</p>
                <p class="text-sm text-gray-400 mt-2">Great for casual text and URLs</p>
              </div>
            </div>
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-purple-400">Title Case</h3>
              <div class="bg-navy-700/30 p-4 rounded-lg">
                <p class="text-2xl">Hello World</p>
                <p class="text-sm text-gray-400 mt-2">Ideal for titles and headings</p>
              </div>
            </div>
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-yellow-400">aLtErNaTiNg</h3>
              <div class="bg-navy-700/30 p-4 rounded-lg">
                <p class="text-2xl">hElLo WoRlD</p>
                <p class="text-sm text-gray-400 mt-2">Fun for creative text effects</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Use Cases -->
        <div class="mt-12 bg-navy-800/30 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-white mb-6 text-center">Common Use Cases</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-navy-700/30 p-4 rounded-lg text-center">
              <h4 class="font-semibold text-green-400 mb-2">UPPERCASE</h4>
              <ul class="text-sm text-gray-300 space-y-1">
                <li>• Document titles</li>
                <li>• Headers</li>
                <li>• Acronyms</li>
                <li>• Emphasis</li>
              </ul>
            </div>
            <div class="bg-navy-700/30 p-4 rounded-lg text-center">
              <h4 class="font-semibold text-blue-400 mb-2">lowercase</h4>
              <ul class="text-sm text-gray-300 space-y-1">
                <li>• URLs</li>
                <li>• File names</li>
                <li>• Casual text</li>
                <li>• Programming</li>
              </ul>
            </div>
            <div class="bg-navy-700/30 p-4 rounded-lg text-center">
              <h4 class="font-semibold text-purple-400 mb-2">Title Case</h4>
              <ul class="text-sm text-gray-300 space-y-1">
                <li>• Article titles</li>
                <li>• Book names</li>
                <li>• Section headers</li>
                <li>• Formal writing</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
