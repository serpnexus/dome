    transform: scale(1.05);
  }
  
  .blog-post-content {
    padding: 2rem;
  }
  
  .blog-post-meta {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    color: var(--gray-400);
    font-size: 0.875rem;
  }
  
  .blog-post-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .blog-post-title {
    font-size: 1.625rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .blog-post-title a {
    color: var(--white);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .blog-post-title a:hover {
    color: var(--yellow-400);
  }
  
  .blog-post-excerpt {
    color: var(--gray-300);
    margin-bottom: 2rem;
    line-height: 1.7;
    font-size: 1rem;
  }
  
  .blog-post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--navy-700);
    padding-top: 1.5rem;
  }
  
  .read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--yellow-400);
    font-weight: 500;
    text-decoration: none;
    transition: gap 0.2s ease;
    font-size: 0.875rem;
  }
  
  .read-more:hover {
    gap: 0.75rem;
  }
  
  .blog-post-tags {
    display: flex;
    gap: 0.75rem;
  }
  
  .blog-post-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.375rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    transition: background-color 0.2s ease;
  }
  
  .blog-post-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
  }
  
  .blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .sidebar-section {
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 1rem;
    overflow: hidden;
  }
  
  .sidebar-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--white);
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--navy-700);
    background-color: var(--navy-700);
  }
  
  .sidebar-content {
    padding: 2rem;
  }
  
  .sidebar-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .sidebar-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.375rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    transition: background-color 0.2s ease;
  }
  
  .sidebar-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
  }
  
  .recent-posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .recent-post-item {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--navy-700);
  }
  
  .recent-post-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  .recent-post-item a {
    color: var(--gray-300);
    text-decoration: none;
    transition: color 0.2s ease;
    display: block;
    line-height: 1.5;
    font-size: 0.875rem;
  }
  
  .recent-post-item a:hover {
    color: var(--yellow-400);
  }
  
  @media (min-width: 768px) {
    .blog-layout {
      grid-template-columns: 2fr 1fr;
    }
    
    .blog-posts {
      grid-template-columns: repeat(1, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .blog-posts {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 767px) {
    .blog-container {
      padding: 3rem 1rem;
    }
    
    .blog-header {
      margin-bottom: 3rem;
    }
    
    .blog-title {
      font-size: 2.75rem;
      margin-bottom: 1.25rem;
    }
    
    .blog-description {
      font-size: 1.125rem;
    }
    
