---
import StaticPageLayout from '../../layouts/BlogLayout.astro';
import { getCollection, getEntry } from 'astro:content';
import { ARTICLE_AD_SLOT, CA_PUB_ID, DISPLAY_AD_FORMAT, DISPLAY_AD_SLOT } from '../../const';
import LazyAdSlot from '../../components/ads/LazyAdsSlot';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');

  return blogEntries.map(entry => ({
    params: { 
      slug: entry.slug 
    },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date
const formatDate = (date: any) => {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
};

// Get previous and next posts for navigation
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const currentIndex = sortedPosts.findIndex(post => post.slug === entry.slug);
const prevPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
const nextPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
---

<StaticPageLayout title={`${entry.data.title}`} description={entry.data.description || entry.data.description || ''}>
  <div class="blog-post-container">
    <div class="blog-post-header">
      <h1 class="blog-post-title">{entry.data.title}</h1>
      <div class="blog-post-meta">
        <div class="blog-post-meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>{formatDate(entry.data.pubDate)}</span>
        </div>
        <div class="blog-post-meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span>{entry.data.author}</span>
        </div>
      </div>
    </div>
    
    <div class="blog-post-layout">
      <article class="blog-post-content">
        {entry.data.image && (
          <img 
            src={entry.data.image || "/placeholder.svg"} 
            alt={entry.data.title} 
            class="blog-post-image"
          />
        )}
        
        <div class="blog-post-body">
          <Content />
          <LazyAdSlot
            client:visible
            adClient={CA_PUB_ID}
            adSlot={ARTICLE_AD_SLOT}
            format={DISPLAY_AD_FORMAT}
            style={{ display: 'block', textAlign: 'center', margin: '2rem 0' }}
          />
        </div>
        
        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="blog-post-tags">
            {entry.data.tags.map(tag => (
              <a href={`/blog/tag/${tag}`} class="blog-post-tag">#{tag}</a>
            ))}
          </div>
        )}
      </article>
      
      <aside class="blog-post-sidebar">
        <LazyAdSlot
          client:visible
          adClient={CA_PUB_ID}
          adSlot={DISPLAY_AD_SLOT}
          format={DISPLAY_AD_FORMAT}
          style={{ display: 'block', textAlign: 'center', marginBottom: '2rem' }}
        />
        
        <div class="sidebar-section">
          <h3 class="sidebar-title">Recent Posts</h3>
          <div class="sidebar-content">
            <ul class="recent-posts-list">
              {sortedPosts.slice(0, 5).map(post => (
                <li class="recent-post-item">
                  <a href={`/blog/${post.slug}`} class={post.slug === entry.slug ? 'active' : ''}>
                    {post.data.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="sidebar-section">
          <h3 class="sidebar-title">Popular Tags</h3>
          <div class="sidebar-content">
            <div class="sidebar-tags">
              {Array.from(new Set(sortedPosts.flatMap(post => post.data.tags || []))).slice(0, 10).map(tag => (
                <a href={`/blog/tag/${tag}`} class="sidebar-tag">#{tag}</a>
              ))}
            </div>
          </div>
        </div>
      </aside>
    </div>
    
    <div class="blog-post-navigation">
      {prevPost && (
        <a href={`/blog/${prevPost.slug}`} class="blog-nav-link prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          <div class="nav-link-content">
            <span class="nav-link-label">Previous</span>
            <span class="nav-link-title">{prevPost.data.title}</span>
          </div>
        </a>
      )}
      
      {nextPost && (
        <a href={`/blog/${nextPost.slug}`} class="blog-nav-link next">
          <div class="nav-link-content">
            <span class="nav-link-label">Next</span>
            <span class="nav-link-title">{nextPost.data.title}</span>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </a>
      )}
    </div>
  </div>
</StaticPageLayout>

<style>
  .blog-post-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }
  
  .blog-post-header {
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .blog-post-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--yellow-400);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    word-wrap: break-word;
    hyphens: auto;
  }
  
  .blog-post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    color: var(--gray-400);
  }
  
  .blog-post-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
  }
  
  .blog-post-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .blog-post-content {
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 1rem;
    overflow: hidden;
    order: 1;
  }
  
  .blog-post-image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    display: block;
  }
  
  .blog-post-body {
    padding: 2rem;
    color: var(--gray-300);
  }
  
  /* Typography improvements */
  .blog-post-body h1 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    color: var(--white);
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
  }
  
  .blog-post-body h2 {
    font-size: clamp(1.5rem, 2.5vw, 1.875rem);
    font-weight: 700;
    color: var(--white);
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
  }
  
  .blog-post-body h3 {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 600;
    color: var(--white);
    margin: 1.75rem 0 0.875rem 0;
    line-height: 1.4;
  }
  
  .blog-post-body h4 {
    font-size: clamp(1.125rem, 1.8vw, 1.25rem);
    font-weight: 600;
    color: var(--white);
    margin: 1.5rem 0 0.75rem 0;
    line-height: 1.4;
  }
  
  .blog-post-body h5 {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    font-weight: 600;
    color: var(--white);
    margin: 1.25rem 0 0.5rem 0;
    line-height: 1.4;
  }
  
  .blog-post-body h6 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--white);
    margin: 1rem 0 0.5rem 0;
    line-height: 1.4;
  }
  
  .blog-post-body p {
    margin-bottom: 1.25rem;
    line-height: 1.7;
    font-size: clamp(1rem, 1.2vw, 1.0625rem);
    color: rgb(200, 200, 200);
  }
  
  .blog-post-body p:last-child {
    margin-bottom: 0;
  }
  
  /* List improvements */
  .blog-post-body ul,
  .blog-post-body ol {
    margin: 1.25rem 0 1.5rem 0;
    padding-left: 1.5rem;
  }
  
  .blog-post-body ul {
    list-style-type: disc;
  }
  
  .blog-post-body ol {
    list-style-type: decimal;
  }
  
  .blog-post-body li {
    margin-bottom: 0.75rem;
    line-height: 1.6;
    color: rgb(200, 200, 200);
  }
  
  .blog-post-body li:last-child {
    margin-bottom: 0.75rem;
  }
  
  /* Nested lists */
  .blog-post-body ul ul,
  .blog-post-body ol ol,
  .blog-post-body ul ol,
  .blog-post-body ol ul {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }
  
  .blog-post-body ul ul {
    list-style-type: circle;
  }
  
  .blog-post-body ul ul ul {
    list-style-type: square;
  }
  
  .blog-post-body blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--yellow-400);
    background-color: var(--navy-700);
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .blog-post-body blockquote p {
    margin-bottom: 0;
    font-style: italic;
    color: var(--gray-200);
  }
  
  .blog-post-body pre {
    margin: 1.5rem 0;
    padding: 1rem;
    background-color: var(--navy-900);
    border-radius: 0.5rem;
    overflow-x: auto;
    font-size: 0.875rem;
  }
  
  .blog-post-body code {
    background-color: var(--navy-700);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: var(--yellow-400);
  }
  
  .blog-post-body pre code {
    background-color: transparent;
    padding: 0;
    color: var(--gray-300);
  }
  
  .blog-post-body a {
    color: var(--yellow-400);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .blog-post-body a:hover {
    text-decoration: underline;
    color: var(--yellow-300);
  }
  
  .blog-post-body img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
    border-radius: 0.5rem;
  }
  
  .blog-post-body table {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
    overflow-x: auto;
    display: block;
    white-space: nowrap;
  }
  
  .blog-post-body th,
  .blog-post-body td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--navy-700);
  }
  
  .blog-post-body th {
    background-color: var(--navy-700);
    color: var(--white);
    font-weight: 600;
  }
  
  .blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    padding: 1.5rem 2rem;
    border-top: 1px solid var(--navy-700);
  }
  
  .blog-post-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .blog-post-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
    transform: translateY(-1px);
  }
  
  .blog-post-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    order: 2;
  }
  
  .sidebar-section {
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 1rem;
    overflow: hidden;
  }
  
  .sidebar-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--navy-700);
    background-color: var(--navy-700);
    margin: 0;
  }
  
  .sidebar-content {
    padding: 1.5rem;
  }
  
  .recent-posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .recent-post-item {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--navy-700);
  }
  
  .recent-post-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  .recent-post-item a {
    color: var(--gray-300);
    text-decoration: none;
    transition: color 0.2s ease;
    display: block;
    line-height: 1.5;
    font-size: 0.875rem;
  }
  
  .recent-post-item a:hover {
    color: var(--yellow-400);
  }
  
  .recent-post-item a.active {
    color: var(--yellow-400);
    font-weight: 500;
  }
  
  .sidebar-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .sidebar-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.8125rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .sidebar-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
    transform: translateY(-1px);
  }
  
  .blog-post-navigation {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .blog-nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 0.75rem;
    padding: 1.25rem;
    color: var(--gray-300);
    text-decoration: none;
    transition: all 0.2s ease;
    flex: 1;
    max-width: 48%;
  }
  
  .blog-nav-link:hover {
    border-color: var(--yellow-400);
    color: var(--white);
    transform: translateY(-2px);
  }
  
  .blog-nav-link.prev {
    margin-right: auto;
  }
  
  .blog-nav-link.next {
    margin-left: auto;
    flex-direction: row-reverse;
  }
  
  .nav-link-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
    flex: 1;
  }
  
  .nav-link-label {
    font-size: 0.8125rem;
    color: var(--gray-400);
    margin-bottom: 0.25rem;
  }
  
  .nav-link-title {
    font-weight: 500;
    font-size: 0.875rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* Mobile-first responsive design */
  @media (min-width: 768px) {
    .blog-post-container {
      padding: 1.5rem;
    }
    
    .blog-post-layout {
      grid-template-columns: 2fr 1fr;
      gap: 2.5rem;
    }
    
    .blog-post-body {
      padding: 2.5rem;
    }
    
    .blog-post-tags {
      padding: 1.5rem 2.5rem;
    }
    
    .sidebar-content {
      padding: 2rem;
    }
    
    .sidebar-title {
      padding: 1.5rem 2rem;
    }
  }
  
  @media (min-width: 1024px) {
    .blog-post-container {
      padding: 2rem;
    }
    
    .blog-post-body {
      padding: 3rem;
    }
    
    .blog-post-tags {
      padding: 2rem 3rem;
    }
  }
  
  /* Small mobile devices */
  @media (max-width: 480px) {
    .blog-post-container {
      padding: 0.75rem;
    }
    
    .blog-post-header {
      margin-bottom: 1.5rem;
    }
    
    .blog-post-meta {
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .blog-post-body {
      padding: 1.5rem;
    }
    
    .blog-post-body h1 {
      margin: 1.5rem 0 0.75rem 0;
    }
    
    .blog-post-body h2 {
      margin: 1.5rem 0 0.75rem 0;
    }
    
    .blog-post-body h3 {
      margin: 1.25rem 0 0.5rem 0;
    }
    
    .blog-post-body p {
      margin-bottom: 1rem;
    }
    
    .blog-post-body ul,
    .blog-post-body ol {
      padding-left: 1.25rem;
    }
    
    .blog-post-tags {
      padding: 1.25rem 1.5rem;
      gap: 0.5rem;
    }
    
    .blog-post-navigation {
      flex-direction: column;
      gap: 1rem;
    }
    
    .blog-nav-link {
      max-width: 100%;
      padding: 1rem;
    }
    
    .nav-link-title {
      white-space: normal;
      overflow: visible;
      text-overflow: clip;
    }
    
    .sidebar-content {
      padding: 1.25rem;
    }
    
    .sidebar-title {
      padding: 1rem 1.25rem;
      font-size: 1.125rem;
    }
  }
</style>