---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";

interface Props {
	title: string;
	description: string;
	image?: string;
}
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/images/og-image.webp' } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- Font preloads -->
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta name="robots" content="index, follow">


    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <link href="/styles/global.css" rel="stylesheet" />
    <meta name="theme-color" content="#0F1A36" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1370487049277752"
     crossorigin="anonymous"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-K5YY1JW4YH');
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Invisible Text",
        "url": "https://www.invisibletext.me/",
        "description": "Generate and use invisible Unicode characters for various applications.",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.invisibletext.me/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Invisible Text",
        "url": "https://www.invisibletext.me/",
        "logo": "https://www.invisibletext.me/logo.webp",
        "contactPoint": {
          "@type": "ContactPoint",
          "email": "contact@invisibletext.me",
          "contactType": "Customer Support",
          "availableLanguage": "English",
          "areaServed": "Worldwide"
        }
      }
    </script>
    

  <style>
    .static-page-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
    }
    
    .static-page-content {
      background-color: var(--navy-800);
      border: 1px solid var(--navy-700);
      border-radius: 0.75rem;
      padding: 2rem;
    }
    
    .static-page-title {
      font-size: 2rem;
      font-weight: 700;
      color: var(--yellow-400);
      margin-bottom: 2rem;
      text-align: center;
    }
    
    @media (max-width: 768px) {
      .static-page-container {
        padding: 2rem 1rem;
      }
      
      .static-page-content {
        padding: 1.5rem;
      }
      
      .static-page-title {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <Header />
  <main>
    <div class="static-page-container">
      <div class="static-page-content">
        <h1 class="static-page-title">{title}</h1>
        <slot />
      </div>
    </div>
  </main>
  <Footer />
</body>
</html>
