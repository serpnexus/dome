---
import Header from '../components/Header.astro';
import "../styles/custom.css";
import Footer from '../components/Footer.astro';
import OGImage from '../components/OGImage.astro';

interface Props {
	title: string;
	description: string;
	image?: string;
	type?: 'website' | 'article' | 'blog';
}
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image, type = 'article' } = Astro.props;

// Generate dynamic OG image URL
// Ensure we have the full URL for OG image (title only)
const baseUrl = Astro.site ? Astro.site.toString().replace(/\/$/, '') : 'https://www.invisibletext.me';
const ogImageUrl = `${baseUrl}/api/og?title=${encodeURIComponent(title)}&type=${type}`;
const finalImageUrl = image ? new URL(image, baseUrl).toString() : ogImageUrl;


---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook / Twitter Meta Tags -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={finalImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Invisible Text" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={finalImageUrl} />
    <meta name="robots" content="index, follow" /> 
    <meta name="theme-color" content="#0F1A36" />
    <style>
      .static-page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }
      
      .static-page-content {
        background-color: var(--navy-800);
        border: 1px solid var(--navy-700);
        border-radius: 0.75rem;
        padding: 2rem;
      }
      
      .static-page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--yellow-400);
        margin-bottom: 2rem;
        text-align: center;
      }
      
      @media (max-width: 768px) {
        .static-page-container {
          padding: 2rem 1rem;
        }
        
        .static-page-content {
          padding: 1.5rem;
        }
        
        .static-page-title {
          font-size: 1.75rem;
          margin-bottom: 1.5rem;
        }
      }
    </style>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>
